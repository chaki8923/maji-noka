<% if  flash[:notice].present? %>
  <p class="notice-line js-toggle-msg"><%= flash[:notice] %></p>
<% end %>
<% if  flash[:alert].present? %>
  <p class="alert-line js-toggle-msg"><%= flash[:alert] %></p>
<% end %>
<%= render 'layouts/error', model: @slide_instance %>
<%= form_for @slide_instance, url: {action: :create}, multipart: true do |f| %>
  <% (1..4).each_with_index do |num, idx| %>
    <div class="mb-3">
      <%= f.label :images, "商品画像",class: "form-label#{num}" %><span>(バイト数:</span><span class="js-byte-preview<%= num %>">)</span>
      <%= f.file_field :images ,include_hidden: false, multiple: true, class: "form-control js-input-#{num}" %>
      <img src="" alt="" class="js-previewImage-<%= num %> preview-format">
    </div>
  <% end %>
  <%=  f.hidden_field :id, value: 1 %>
  <div class="mt-3" style="margin-top: 20px;">
    <%= submit_tag "画像登録",class: "btn btn-primary mb-5" %>
  </div>
<% end %>

<% if @sliders.present? %>
  <p class="text-center fs-3">現在のスライド画像</p>
  <div class="container">
    <div class="d-flex justify-content-evenly">
      <% @sliders.images.each do |image| %>
      <div class="row w-25">
        <%= image_tag image.url %>
      </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>現在スライド画像はありません</p>
<% end %>
