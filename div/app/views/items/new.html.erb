<div class="container mt-5">
  <h2>商品登録</h2>
  <%= render 'layouts/error', model: @item_instance %>
  <%= form_for @item_instance, url: {action: :create}, multipart: true do |f| %>
    <%=  f.hidden_field :action , value: :create %>
    <div class="mb-3">
      <%= f.label :name, "商品名", class: 'form-label' %>
      <%=  f.text_field :name, placeholder: '',required: true,class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :price, "値段" ,class: 'form-label' %>
      <%=  f.text_field :price, placeholder: '',required: true,class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :postage, "送料", class: 'form-label' %>
      <%=  f.text_field :postage,class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :inventory, "在庫", class: 'form-label' %>
      <%=  f.text_field :inventory, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :maji_flag, "新入荷",class: 'form-label' %>
      <%=  f.check_box :maji_flag %>
    </div>
    <div class="mb-3">
      <%= f.label :description, "アピールコメント", class: 'form-label' %>
      <%=  f.text_area :description,class: 'form-control' %>
    </div>
    <% (1..4).each_with_index do |num, idx| %>
      <div class="mb-3">
        <%= f.label :image, "商品画像",class: "form-label#{num}" %><span>(バイト数:</span><span class="js-byte-preview<%= num %>">)</span>
        <%= f.file_field "image#{num}".to_sym ,include_hidden: false, class: "form-control js-input-#{num}" %>
        <img src="" alt="" class="js-previewImage-<%= num %> preview-format">
      </div>
    <% end %>
    <div class="mt-3" style="margin-top: 20px;">
      <%= submit_tag "商品登録",class: "btn btn-primary mb-5" %>
    </div>
  <% end %>
</div>
