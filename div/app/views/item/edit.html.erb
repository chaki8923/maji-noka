<div class="container mt-5">
    <h2>商品編集</h2>
    <%= render 'layouts/error', model: @data %>
    <%= form_for @data, url: {action: :update}, multipart: true do |f| %>
            <%=  f.hidden_field :id, value: @item["id"] %>
        <div class="mb-3">
            <%= f.label :name,class: 'form-label' %>
            <%=  f.text_field :name, value: @item["name"], placeholder: '商品名',required: true,class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= f.label :price,class: 'form-label' %>
            <%=  f.text_field :price, value: @item["price"], placeholder: '値段',required: true,class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= f.label :postage,class: 'form-label' %>
            <%=  f.text_field :postage, value: @item["postage"],class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= f.label :inventory,class: 'form-label' %>
            <%=  f.text_field :inventory, value: @item["inventory"],class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= f.label :maji_flag,class: 'form-label' %>
            <%=  f.check_box :maji_flag %>
        </div>
        <div class="mb-3">
            <%= f.label :description,class: 'form-label' %>
            <%=  f.text_area :description, value: @item["description"],class: 'form-control' %>
        </div>
        <% [1,2,3,4].each do |num| %>
          <div class="mb-3">
            <%= f.label :image,class: "form-label#{num}" %><span>バイト数:</span><span class="js-byte-preview<%= num %>"></span>
            <%= f.file_field :images, multiple: true ,include_hidden: false, class: "form-control js-input-#{num}" %>
            <img src="" alt="" class="js-previewImage-<%= num %> preview-format">
          </div>
        <% end %>
        <div class="mt-3" style="margin-top: 20px;">
            <%= submit_tag "商品登録",class: "btn btn-primary mb-5" %>
        </div>
    <% end %> 
</div>