<!-- Button trigger modal -->
<button type="button" class="btn btn-primary date_modal_edit" data-bs-toggle="modal" data-bs-target="#staticBackdrop2">
  Launch static backdrop modal
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdrop2Label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdrop2Label">予定編集</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_for @schedule_instance, url: "/schedule/update", multipart: true do |f| %>
          <div class="input-daterange input-group" id="datepicker">
            <div class="input-group-prepend">
              <span class="input-group-text">開始時間</span>
            </div>
             <%= f.hidden_field :id, class: 'form-control date-form' %>
             <%= f.hidden_field :schedule_date, class: 'form-control date-form' %>
             <%=  f.time_field :start_time,class: 'form-control edit_start_time' %>
            <div class="input-group-append">
              <span class="input-group-text">終了時間</span>
            </div>
            <%=  f.time_field :end_time,class: 'form-control edit_end_time' %>
            </div>
            <%=  f.hidden_field :action , value: :create %>
            <div class="mb-3">
              <%= f.label :title, "タイトル", class: 'form-label' %>
              <%=  f.text_field :title, placeholder: '',required: true,class: 'form-control edit_title' %>
            </div>
            <div class="mb-3">
              <%= f.label :memo, "メモ" ,class: 'form-label' %>
              <%=  f.text_area :memo, placeholder: '',class: 'form-control edit_memo' %>
            </div>
            
            <div class="mt-3" style="margin-top: 20px;">
            <%= submit_tag "編集",class: "btn btn-primary mb-5" %>
          </div>
        <% end %>
        <%= form_for @schedule_instance, url: "/schedule/delete", multipart: true do |f| %>
          <%= f.hidden_field :id, class: 'form-control date-form', id: "del_schedule_id" %>
          <%= button_to "削除", schedule_delete_path, { method: :delete, form: { data: { turbo_confirm: "本当に削除しますか？" } }, class: 'btn btn-danger delete-button' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>