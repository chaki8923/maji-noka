<div class="container">
    <h1>新規登録</h1>
    <%= render 'layouts/error', model: @data %>
    <%= form_for @data, url: {action: :login} do |f| %>
        <div class="mb-3">
            <%= f.label :email,class: 'form-label' %>
            <%=  f.text_field :email, placeholder: 'E-mail',required: true,class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= f.label :password,class: 'form-label' %>
            <%=  f.text_field :password, placeholder: 'Password',required: true,class: 'form-control' %>
        </div>
        <div class="mt-3" style="margin-top: 20px;">
            <%= submit_tag "新規登録",class: "btn btn-primary" %>
        </div>
    <% end %> 
</div>