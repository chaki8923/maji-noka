<div class="container mt-5">
    <h2>新規登録</h2>
    <%= render 'layouts/error', model: @data %>
    <%= form_for @data, url: {action: :signup} do |f| %>
        <div class="mb-3">
            <%= f.label :email,class: 'form-label' %>
            <%=  f.text_field :email, placeholder: 'E-mail',required: true,class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= f.label :password,class: 'form-label' %>
            <%=  f.password_field :password, placeholder: 'Password',required: true,class: 'form-control' %>
        </div>
        <div class="mt-3" style="margin-top: 20px;">
            <%= submit_tag "新規登録",class: "btn btn-primary" %>
        </div>
    <% end %> 
        <div class="mt-3">
      <%= link_to "ログイン", login_path %>
    </div>
</div>