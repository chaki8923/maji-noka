<div class="p-5">
  <%= form_for @google_api, url: "/google_api/update", method: 'put', multipart: true do |f| %>
    <div class="mb-3">
      <%= f.label :api_key, "API_KEY" ,class: 'form-label' %>
      <%=  f.password_field :api_key, placeholder: '',required: true,class: 'form-control', value: @db_google_api[:api_key] %>
    </div>
    <div class="mb-3">
      <%= f.label :calendar_id, "カレンダーID" ,class: 'form-label' %>
      <%=  f.text_field :calendar_id, placeholder: '',required: true,class: 'form-control', value: @db_google_api[:calendar_id] %>
      <%=  f.hidden_field :user_id, placeholder: '',required: true,class: 'form-control', value: @current_user["id"] %>
    </div>
    <div class="mt-3" style="margin-top: 20px;">
        <%= submit_tag "更新",class: "btn btn-primary mb-5" %>
      </div>
  <% end %>
</div>