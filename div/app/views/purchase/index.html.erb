<h2 class="mt-5">注文一覧</h2>
<table class="table table-dark table-striped">
<thead>
  <tr>
    <th scope="col">お名前</th>
    <th scope="col">商品</th>
    <th scope="col">注文個数</th>
    <th scope="col">注文日</th>
    <th scope="col">対応</th>
  </tr>
</thead>
<tbody>
<% @purchase.each do |p| %>
    <tr>
      <td><%= p[:customer_name] %></td>
      <td><%= p[:item_name] %></td>
      <td><%= p[:quantity] %></td>
      <td><%= p[:createdAt] %></td>
      <td><button>対応</button></td>
    </tr>
<% end %>
</tbody>
</table>
