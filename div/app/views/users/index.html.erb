<h2 class="mt-5">顧客一覧</h2>
<table class="table table-dark table-striped">
<thead>
  <tr>
    <th scope="col">お名前</th>
    <th scope="col">メールアドレス</th>
    <th scope="col">郵便番号</th>
    <th scope="col">都道府県</th>
    <th scope="col">住所1</th>
    <th scope="col">住所2</th>
  </tr>
</thead>
<% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer[:name] %></td>
      <td><a href="<%= customer[:email] %>"><%= customer[:email] %></a></td>
      <td><%= customer[:postal_code] %></td>
      <td><%= customer[:state] %></td>
      <td><%= customer[:line1] %></td>
      <td><%= customer[:line2] %></td>
    </tr>
  </tbody>
</table>

<% end %>
