// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ruby
{
  "name": "Ruby",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/ruby:1-3.2-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {},
    "ghcr.io/devcontainers-contrib/features/gitsign-credential-cache:1": {}
  },
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "ruby --version",
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
  "postCreateCommand": "rm -f Gemfile && rm -f Gemfile.lock && bundle init && echo \"gem 'solargraph'\" >> Gemfile && echo \"gem 'syntax_tree'\" >> Gemfile && echo \"gem 'htmlbeautifier'\" >> Gemfile && bundle install",
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "rebornix.ruby",
        "dbaeumer.vscode-eslint",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "MS-CEINTL.vscode-language-pack-ja",
        "aliariff.vscode-erb-beautify",
        "castwide.solargraph",
        "esbenp.prettier-vscode",
        "adpyke.vscode-sql-formatter",
        "redhat.vscode-yaml",
        "sorbet.sorbet-vscode-extension",
        "aki77.rubocop-quick-fix",
        "aki77.html-erb",
        "aki77.rails-routes",
        "usernamehw.errorlens"
      ]
    }
  }
}